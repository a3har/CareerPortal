@model CareerPortal.Models.FileUploadObject

<div class="container">
    <div class="mt-5 row justify-content-center">
        <div class="col-7 border p-5">
            <form enctype="multipart/form-data" method="post">
                <div class="row">
                    <div class="col-10">
                        <h3>Upload @Model.Type</h3>
                        <div class="form-group row mt-4">
                            <div class="col-4">
                                <label asp-for="URL" class="mt-2">Upload</label>
                            </div>
                            <div class="col-8">
                                <input type="file" class="form-control-file custom-file" asp-for="URL" />
                                <span asp-validation-for="URL" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <button type="submit" class="btn btn-primary mt-4 float-right">Upload</button>
            </form>
        </div>
    </div>

</div>