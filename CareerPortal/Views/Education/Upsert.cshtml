@model CareerPortal.Models.Education
<div class="container">
    <div class="mt-5 row border justify-content-between p-5">
        <div class="col-8 p-5">
            <form method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="row">
                    <div class="col-10">
                        <h3>Add/Edit Education</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row mt-4">
                            <div class="col-4">
                                <label asp-for="Institution" class="mt-2">Institution Name</label>
                            </div>
                            <div class="col-8">
                                <input type="text" asp-for="Institution" class="form-control" placeholder="Enter institution name" />
                                <span asp-validation-for="Institution" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="mt-2" asp-for="Degree">Degree</label>
                            </div>
                            <div class="col-8">
                                <input type="text" asp-for="Degree" class="form-control" placeholder="Enter degree name" />
                                <span asp-validation-for="Degree" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="mt-2" asp-for="Score">Score</label>
                            </div>
                            <div class="col-8">
                                <input type="text" asp-for="Score" class="form-control" placeholder="Enter score in percentage" />
                                <span asp-validation-for="Score" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="mt-2" asp-for="EnrollYear">Year of Enrollment</label>
                            </div>
                            <div class="col-8">
                                <input type="text" asp-for="EnrollYear" class="form-control" placeholder="Enter year of enrollment" />
                                <span asp-validation-for="EnrollYear" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="mt-2" asp-for="PassYear">Year of pass</label>
                            </div>
                            <div class="col-8">
                                <input type="text" asp-for="PassYear" class="form-control" placeholder="Enter year of pass" />
                                <span asp-validation-for="PassYear" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-4">Add / Edit</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }
