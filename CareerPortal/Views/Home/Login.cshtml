@model CareerPortal.Models.Login


<div class="container">
    <div class="mt-5 row justify-content-center">
        <div class="col-6 border p-5">
            <form method="post">
                <h1 style="text-align:center" class="mb-5">Login</h1>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email" class="mt-2">Email address</label>
                    </div>
                    <div class="col-8">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>



                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Password" class="mt-2">Password</label>
                    </div>
                    <div class="col-8">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary float-right">Login</button>
                <small class="mt-4 form-text text-muted">New user ? <a asp-action="Register">Click here</a> to register</small>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
